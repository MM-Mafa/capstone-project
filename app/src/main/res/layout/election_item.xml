<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@drawable/result_tem_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/candidate_image_results"
        android:layout_width="88dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iec_south_africa_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/party_name_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="3sp"
        android:text="party name"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/candidate_image_results"
        app:layout_constraintTop_toTopOf="@+id/candidate_image_results" />

    <TextView
        android:id="@+id/number_of_votes_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="3sp"
        android:text="votes:"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/candidate_image_results"
        app:layout_constraintTop_toBottomOf="@+id/party_name_results" />


</androidx.constraintlayout.widget.ConstraintLayout>